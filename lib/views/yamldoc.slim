      $ ->
        $('.clickable').on "click", (e) ->
          e.preventDefault()
          target = $(this).attr 'href'
          $(target).toggle()

        $('#toggle-all').on "click", (e) ->
          e.preventDefault()
          $('.hidden').toggle()

